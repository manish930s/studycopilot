:root {
    --bg-color: #0f172a;
    --sidebar-bg: #1e293b;
    --chat-bg: #0f172a;
    --bg-primary: #0f172a;
    --bg-secondary: #1e293b;
    --input-bg: #1e293b;
    --text-primary: #f8fafc;
    --text-secondary: #94a3b8;
    --accent-color: #3b82f6;
    --accent-hover: #2563eb;
    --user-msg-bg: #3b82f6;
    --agent-msg-bg: #1e293b;
    --border-color: #334155;
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Inter', sans-serif;
    background-color: var(--bg-color);
    color: var(--text-primary);
    height: 100vh;
    overflow: hidden;
}

.app-container {
    display: flex;
    height: 100%;
}

/* Sidebar */
.sidebar {
    width: 300px;
    background-color: var(--sidebar-bg);
    border-right: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    overflow-y: auto;
}

.logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    flex-shrink: 0;
}

.logo i {
    color: var(--accent-color);
}

.new-chat-btn {
    width: 100%;
    background-color: var(--accent-color);
    color: white;
    border: none;
    padding: 0.75rem;
    border-radius: 0.5rem;
    font-weight: 500;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    transition: background-color 0.2s;
    flex-shrink: 0;
}

.new-chat-btn:hover {
    background-color: var(--accent-hover);
}

.sidebar-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 2rem;
    flex-shrink: 0;
}

.nav-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    color: var(--text-secondary);
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.2s;
    cursor: pointer;
}

.nav-item:hover,
.nav-item.active {
    background-color: rgba(255, 255, 255, 0.05);
    color: var(--text-primary);
}

.nav-item i {
    width: 20px;
    text-align: center;
}

.sidebar-section {
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
}

.sidebar-section h3 {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
}

.recent-chats-list {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.chat-item {
    padding: 0.5rem 0.75rem;
    font-size: 0.9rem;
    color: var(--text-secondary);
    cursor: pointer;
    border-radius: 0.375rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    transition: all 0.2s;
}

.chat-item:hover {
    color: var(--text-primary);
    background-color: rgba(255, 255, 255, 0.03);
}

.chat-item.active {
    color: var(--text-primary);
    background-color: rgba(255, 255, 255, 0.05);
}

.chat-title {

    #chat-form {
        display: flex;
        gap: 1rem;
        background-color: var(--input-bg);
        padding: 0.5rem;
        border-radius: 0.75rem;
        border: 1px solid var(--border-color);
    }

    #user-input {
        flex: 1;
        background: none;
        border: none;
        color: var(--text-primary);
        padding: 0.75rem;
        font-size: 1rem;
        outline: none;
    }

    button[type="submit"] {
        background-color: var(--accent-color);
        color: white;
        border: none;
        width: 48px;
        height: 48px;
        border-radius: 0.5rem;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    button[type="submit"]:hover {
        background-color: var(--accent-hover);
    }

    .upload-btn {
        background: transparent;
        border: none;
        color: var(--text-secondary);
        font-size: 1.2rem;
        cursor: pointer;
        padding: 0 0.75rem;
        border-radius: 0.5rem;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 48px;
        width: 48px;
    }

    .upload-btn:hover {
        background-color: rgba(255, 255, 255, 0.05);
        color: var(--text-primary);
    }

    #file-input {
        display: none;
    }

    /* Scrollbar */
    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-track {
        background: transparent;
    }

    ::-webkit-scrollbar-thumb {
        background: var(--border-color);
        border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: var(--text-secondary);
    }

    .hidden {
        display: none !important;
    }

    /* Tasks Area */
    .tasks-area {
        flex: 1;
        display: flex;
        flex-direction: column;
        height: 100vh;
        background-color: var(--bg-primary);
    }

    .tasks-header {
        padding: 2rem 2.5rem;
        border-bottom: 1px solid var(--border-color);
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.05), rgba(139, 92, 246, 0.03));
    }

    .tasks-header h2 {
        font-size: 1.8rem;
        background: linear-gradient(135deg, var(--accent-color), #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .tasks-content {
        flex: 1;
        overflow-y: auto;
        padding: 2.5rem;
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
    }

    .task-section {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.03), rgba(139, 92, 246, 0.02));
        padding: 2rem;
        border-radius: 1.25rem;
        border: 2px solid var(--border-color);
        transition: all 0.3s;
    }

    .task-section h3 {
        font-size: 1.4rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid var(--border-color);
    }

    .task-section h3 i {
        color: var(--accent-color);
    }

    .task-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .task-item {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
        padding: 1.25rem 1.5rem;
        border-radius: 0.875rem;
        display: flex;
        align-items: center;
        gap: 1.25rem;
        border: 2px solid var(--border-color);
        transition: all 0.3s;
    }

    .task-item:hover {
        border-color: var(--accent-color);
        transform: translateX(8px);
    }

    .task-checkbox {
        width: 22px;
        height: 22px;
        cursor: pointer;
        accent-color: var(--accent-color);
        flex-shrink: 0;
    }

    .task-details {
        flex: 1;
    }

    .task-title {
        font-weight: 500;
        font-size: 1.05rem;
        color: var(--text-primary);
        margin-bottom: 0.4rem;
    }

    .task-meta {
        font-size: 0.875rem;
        color: var(--text-secondary);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .task-meta i {
        color: var(--accent-color);
    }

    .add-task-form {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .add-task-form input {
        flex: 1;
        padding: 1rem 1.25rem;
        border-radius: 0.75rem;
        border: 2px solid var(--border-color);
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.03), rgba(139, 92, 246, 0.02));
        color: var(--text-primary);
        outline: none;
        font-size: 1rem;
        transition: all 0.3s;
    }

    .add-task-form input:focus {
        border-color: var(--accent-color);
        box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
    }

    .add-task-form button {
        background: linear-gradient(135deg, var(--accent-color), #8b5cf6);
        color: white;
        border: none;
        width: 3.5rem;
        height: 3.5rem;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    .add-task-form button:hover {
        transform: translateY(-2px);
    }

    .delete-task-btn {
        background: none;
        border: none;
        color: var(--text-secondary);
        cursor: pointer;
        opacity: 0;
        transition: all 0.3s;
        padding: 0.5rem;
        border-radius: 0.5rem;
    }

    .task-item:hover .delete-task-btn {
        opacity: 1;
    }

    .delete-task-btn:hover {
        color: #ef4444;
        background: rgba(239, 68, 68, 0.1);
    }

    .task-item.completed {
        opacity: 0.6;
        text-decoration: line-through;
    }

    /* Quizzes Area */
    .quizzes-area {
        flex: 1;
        display: flex;
        flex-direction: column;
        height: 100vh;
        background-color: var(--bg-primary);
    }

    .quizzes-header {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid var(--border-color);
        background-color: var(--bg-secondary);
    }

    .quiz-selection {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        padding: 3rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .quiz-mode-card {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
        border: 1px solid var(--border-color);
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s;
        cursor: pointer;
    }

    .quiz-mode-card:hover {
        transform: translateY(-5px);
        border-color: var(--accent-color);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .quiz-icon {
        font-size: 3rem;
        color: var(--accent-color);
        margin-bottom: 1rem;
    }

    .quiz-mode-card h3 {
        font-size: 1.3rem;
        margin-bottom: 0.75rem;
        color: var(--text-primary);
    }

    .quiz-mode-card p {
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
        line-height: 1.5;
    }

    .quiz-start-btn {
        background-color: var(--accent-color);
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 0.5rem;
        cursor: pointer;
        font-weight: 500;
        transition: opacity 0.2s;
    }

    .quiz-start-btn:hover {
        opacity: 0.9;
    }

    .quiz-content {
        padding: 2rem;
        overflow-y: auto;
    }

    .back-to-selection {
        background: none;
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        cursor: pointer;
        margin-bottom: 2rem;
        transition: all 0.2s;
    }

    .back-to-selection:hover {
        border-color: var(--accent-color);
        color: var(--text-primary);
    }

    .quiz-mode-content {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .uploaded-files-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1rem;
    }

    .file-item {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.08), rgba(139, 92, 246, 0.08));
        padding: 1.25rem;
        border-radius: 0.75rem;
        border: 2px solid var(--border-color);
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .file-item:hover {
        border-color: var(--accent-color);
        transform: translateY(-4px);
    }

    .file-item i {
        font-size: 1.5rem;
        color: var(--accent-color);
    }

    .quiz-questions {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
    }

    .question-card {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.05), rgba(139, 92, 246, 0.05));
        padding: 2rem;
        border-radius: 1.25rem;
        border: 2px solid var(--border-color);
        transition: all 0.3s;
    }

    .question-text {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 1.75rem;
        color: var(--text-primary);
    }

    .answer-options {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .answer-option {
        background-color: var(--bg-secondary);
        padding: 1.25rem 1.5rem;
        border-radius: 0.875rem;
        border: 2px solid var(--border-color);
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .answer-option:hover {
        border-color: var(--accent-color);
        transform: translateX(8px);
    }

    .answer-option input[type="radio"] {
        appearance: none;
        width: 26px;
        height: 26px;
        border: 2px solid var(--border-color);
        border-radius: 50%;
        cursor: pointer;
        position: relative;
        transition: all 0.3s;
        flex-shrink: 0;
    }

    .answer-option input[type="radio"]:checked {
        border-color: var(--accent-color);
        background: linear-gradient(135deg, var(--accent-color), #8b5cf6);
    }

    .answer-option input[type="radio"]:checked::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 12px;
        height: 12px;
        background-color: white;
        border-radius: 50%;
    }

    .answer-option-text {
        flex: 1;
        font-size: 1.05rem;
        color: var(--text-primary);
    }

    .answer-option.selected {
        border-color: var(--accent-color);
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.15), rgba(139, 92, 246, 0.1));
    }

    .answer-option.correct {
        border-color: #22c55e;
        background: linear-gradient(135deg, rgba(34, 197, 94, 0.15), rgba(34, 197, 94, 0.05));
    }

    .answer-option.incorrect {
        border-color: #ef4444;
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.15), rgba(239, 68, 68, 0.05));
    }

    .answer-feedback {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        font-size: 0.95rem;
        padding: 0.25rem 0.75rem;
        border-radius: 0.5rem;
    }

    .answer-feedback.correct {
        color: #22c55e;
        background: rgba(34, 197, 94, 0.1);
    }

    .answer-feedback.incorrect {
        color: #ef4444;
        background: rgba(239, 68, 68, 0.1);
    }

    .submit-quiz-btn {
        background: linear-gradient(135deg, var(--accent-color), #8b5cf6);
        color: white;
        border: none;
        padding: 1.25rem 3.5rem;
        border-radius: 1rem;
        font-size: 1.15rem;
        font-weight: 600;
        cursor: pointer;
        margin-top: 2.5rem;
        transition: all 0.3s;
    }

    .submit-quiz-btn:hover {
        transform: translateY(-3px);
    }

    .submit-quiz-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .quiz-score {
        background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(16, 185, 129, 0.1));
        border: 2px solid #22c55e;
        border-radius: 1.25rem;
        padding: 2.5rem;
        text-align: center;
        margin-top: 2.5rem;
    }

    .quiz-score h3 {
        font-size: 2.5rem;
        background: linear-gradient(135deg, #22c55e, #10b981);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1rem;
    }

    .quiz-score p {
        font-size: 1.25rem;
        color: var(--text-primary);
    }

    .interview-setup {
        max-width: 700px;
    }

    .interview-setup label {
        display: block;
        margin-bottom: 0.75rem;
        color: var(--text-primary);
        font-weight: 600;
    }

    .interview-setup input,
    .interview-setup textarea {
        width: 100%;
        padding: 1rem;
        border-radius: 0.75rem;
        border: 2px solid var(--border-color);
        background-color: var(--bg-secondary);
        color: var(--text-primary);
        margin-bottom: 1.5rem;
        font-size: 1rem;
    }

    .interview-setup input:focus,
    .interview-setup textarea:focus {
        outline: none;
        border-color: var(--accent-color);
    }

    #start-interview-btn {
        background: linear-gradient(135deg, var(--accent-color), #8b5cf6);
        color: white;
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 0.75rem;
        cursor: pointer;
        font-weight: 600;
        font-size: 1.1rem;
    }

    #start-interview-btn:hover {
        transform: translateY(-2px);
    }

    .interview-chat {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        max-width: 900px;
    }

    .interview-message {
        padding: 1.25rem;
        border-radius: 1rem;
        max-width: 85%;
    }

    .interview-message.interviewer {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(139, 92, 246, 0.05));
        align-self: flex-start;
        border-left: 4px solid var(--accent-color);
    }

    /* Delete File Button */
    .delete-file-btn {
        background: none;
        border: none;
        color: var(--text-secondary);
        cursor: pointer;
        padding: 0.5rem;
        border-radius: 0.5rem;
        opacity: 0;
        transition: all 0.3s;
        font-size: 1rem;
    }

